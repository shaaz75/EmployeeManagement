@model IEnumerable<Employee>
@{
    ViewBag.Title= "Index";
    
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var ImagePath = "~/image/" + (employee.PhotoPath ?? "nopic.png");
        <div class="card m-3" style="min-width:18rem;max-width:30.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <div class="card-body">
                <img class="card-img-top imageThumbnail" src="@ImagePath" asp-append-version="true" />
            </div>
            <div class="card-footer text-center">
                <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                <a asp-action="Edit" asp-route-id=@employee.Id class="btn btn-primary m-1">Edit</a>
                <a asp-action="Delete" asp-route-id=@employee.Id class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>