@model HomeDetailsViewModel
@{
    ViewBag.Title= Model.PageTitle;
    var ImagePath = "~/image/" + (Model.Employee.PhotoPath ?? "nopic.png");

}
<h3>@Model.PageTitle</h3>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="@ImagePath" asp-append-version="true" />
                <h4>Employee ID : @Model.Employee.Id</h4>
                <h4>Email : @Model.Employee.Email</h4>
                <h4>Department : @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index"  class="btn btn-primary m-1">Back</a>
                <a asp-action="Edit" asp-route-id=@Model.Employee.Id class="btn btn-primary m-1">Edit</a>
                <a asp-action="Delete" asp-route-id=@Model.Employee.Id class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>
